              </div>
              <div class="col-md-6 form-group">
                <label>Nombre/Código Oficina de la agencia</label>
                <input id="oficinaAgencia" class="form-control" type="text" placeholder="Oficina de preferencia">
              </div>
            </div>
          </div>
        </div>


        <script>
          function toggleFormularioEnvio() {
            console.log('ddddddd');
            const envioAgencia = document.getElementById('envioAgencia');
            const formularioEnvio = document.getElementById('shipping-address');

            if (envioAgencia.checked) {
              formularioEnvio.style.display = 'inline';
            } else {
              formularioEnvio.style.display = 'none';
            }
          }

          // Inicializar el estado del formulario al cargar la página
          document.addEventListener('DOMContentLoaded', function() {
            toggleFormularioEnvio();
          });
        </script>



      </div>

      <div class="col-lg-4">
        <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Orden total</span></h5>
        <div class="bg-light p-30 mb-5">
          <div class="border-bottom">
            <h6 class="mb-3">Productos</h6>
            <% productos.forEach(producto => { %>
            <div class="d-flex justify-content-between">
              <p><%= producto.nombre %></p>
              <p>$<%= producto.precio * producto.cantidad %></p>
            </div>
            <% }); %>
          </div>
          <div class="border-bottom pt-3 pb-2">
            <div class="d-flex justify-content-between mb-3">
              <h6>Subtotal</h6>
              <h6>$<%= total %></h6>

            </div>

            <div class="d-flex justify-content-between mb-3">
              <h6>IVA</h6>
              <h6> $<%= total*0.16 %></h6>
            </div>
            <div class="d-flex justify-content-between">
              <h6 class="font-weight-medium">Envio</h6>
              <h6 class="font-weight-medium">$0</h6>
            </div>
          </div>
          <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
              <h5>Total</h5>
              <h5> $<%= (total+ total*0.16).toFixed(2) %></h5>
            </div>
            <div class="d-flex justify-content-between mt-2">
              <h5></h5>
              <h6>Bs <%= (totalBs+totalBs*0.16).toFixed(2) %></h6>
            </div>
          </div>
        </div>


        <div class="mb-5">
          <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Método de pago</span></h5>
          <div class="bg-light p-30">

            <div class="form-group">
              <div class="custom-control custom-radio">
                <input type="radio" class="custom-control-input" name="payment" id="pago-movil" value="pago-movil">
                <label class="custom-control-label" for="pago-movil">Pago móvil</label>
              </div>
            </div>

            <!--<div class="form-group">
              <div class="custom-control custom-radio">
                <input type="radio" class="custom-control-input" name="payment" id="directcheck">
                <label class="custom-control-label" for="directcheck">Tranferencia bancaria</label>
              </div>
            </div>-->

            <button class="btn btn-block btn-primary font-weight-bold py-3" onclick="showInfoPanel()">Registar pago</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Checkout End -->


