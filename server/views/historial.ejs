                  <tr>
                    <td><%= pedido._id.toString() %></td>
                    <td><%= pedido.fechaFormateada %></td>
                    <td>$<%= pedido.total ? parseFloat(pedido.total).toFixed(2) : '0.00' %></td>
                    <td>
                      <span class="badge bg-<%= 
                            pedido.estado === 'completado' ? 'success' : 
                            pedido.estado === 'pendiente' ? 'warning' : 
                            pedido.estado === 'No pagado' ? 'danger' : 'secondary' 
                        %>">
                        <%= pedido.estado || 'desconocido' %>
                      </span>
                    </td>
                    <td>
                      <!-- Botón condicional para "No pagado" -->
                      <% if (pedido.estado === 'No pagado') { %>
                      <button class="btn btn-sm btn-success btn-pagar" data-pedido-id="<%= pedido._id %>" onclick="showInfoPanelNewReferencia('<%= pedido.total %>','<%= pedido._id %>')">
