  <script>
    function showInfoPanelNewReferencia(dolar, idPedido) {
      const overlay = document.getElementById('info-panel-overlay');

      idTarget = idPedido

      const precioPanel = document.getElementById('precioPanel');


      precioPanel.childNodes[2].textContent = ` $ ${dolar}`;

      overlay.classList.add('show');
      document.body.style.overflow = 'hidden'; // Prevenir scroll
    }

    let idTarget;

    function showInfoPanel() {
      const overlay = document.getElementById('info-panel-overlay');
      overlay.classList.add('show');
      document.body.style.overflow = 'hidden'; // Prevenir scroll
    }

    function hideInfoPanel() {
      const overlay = document.getElementById('info-panel-overlay');
      overlay.classList.remove('show');
      document.body.style.overflow = ''; // Restaurar scroll
    }

    function markAsPaidReferencia() {
      // Obtener el valor de la referencia bancaria
      const bankReference = document.getElementById('bank-reference').value;

      // Validar que se haya ingresado una referencia
      if (!bankReference.trim()) {
        showNotification('Por favor ingrese la referencia bancaria', 'error');
        return;
      }

      // Aquí iría la lógica para procesar el pago con la referencia
      //showNotification(`Pago procesado correctamente. Referencia: ${bankReference}`, 'default');
      hideInfoPanel();
      reProcesarPago();
      // Opcional: Limpiar el campo para la próxima vez
      document.getElementById('bank-reference').value = '';


    }

    // Cerrar el panel al hacer clic fuera del contenido
    document.getElementById('info-panel-overlay').addEventListener('click', function(e) {
      if (e.target === this) {
        hideInfoPanel();
      }
    });




    function reProcesarPago(id) {
      // Recoger datos del formulario principal

      const bankReference = document.getElementById('bank-reference').value;

      const datosPago = {
        nombres: $('#nombres').val(),
        referencia: $('#bank-reference').val(),
        idPedido: idTarget
      };


      // Enviar datos al servidor
      $.ajax({
        url: '/api/products/procesar-pago-ref',
        type: 'POST',
        dataType: 'json',
        contentType: 'application/json',
        data: JSON.stringify(datosPago),
        success: function(response) {
          if (response.success) {
            showNotification('Pago registrado exitosamente', 'success');
            // Redirigir o limpiar formulario
            setTimeout(() => {
              window.location.href = '/confirmacion-pago';
            }, 2000);
          } else {
            showNotification(response.message, 'error');
          }
        },
        error: function(xhr, status, error) {
          console.error('Error al procesar pago:', error);
          showNotification('Error al procesar el pago', 'error');
        }
      });
    }
  </script>



 


<script>
// Función para mostrar los detalles del pedido


async function showOrderDetails(pedidoId) {
    try {
        // Usar AJAX con POST para obtener los detalles
        $.ajax({
            url: '/api/products/pedido/id',  // Ajusta esta URL según tu endpoint
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ id: pedidoId }),
            success: function(data) {
                if (data.success) {
                    const pedido = data.pedido;
                    const detailsContent = document.getElementById('detailsContent');
                    
                    // Formatear los detalles del pedido
                    detailsContent.innerHTML = `
                        <div class="mb-3">
                            <strong>ID Pedido:</strong> ${pedido._id}
                        </div>
                        <div class="mb-3">
                            <strong>Fecha:</strong> ${pedido.fechaFormateada}
                        </div>
                        <div class="mb-3">
                            <strong>Estado:</strong> 
                            <span class="badge bg-${getEstadoBadgeColor(pedido.estado)}">
                                ${pedido.estado}
                            </span>
                        </div>
                        
                        <h5 class="mt-4">Productos:</h5>
                        ${pedido.productos.map(producto => `
                            <div class="details-item">
                                <div class="d-flex align-items-center">
                                    <img src="/uploads/productos/${getImageName(producto.detalles.imagenes)}" 
                                         alt="${producto.detalles.nombre}" 
                                         class="img-thumbnail me-2" 
                                         style="width: 50px; height: 50px; object-fit: cover;">
                                    <div>
                                        <div>${producto.detalles.nombre}</div>
                                        <small class="text-muted">Código: ${producto.idProducto}</small>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <div>${producto.cantidad} x $${producto.precioUnitario}</div>
                                    <strong>$${producto.cantidad * producto.precioUnitario}</strong>
                                </div>
                            </div>
                        `).join('')}
                        
                        <div class="details-total">
                            <span>Total:</span>
                            <span>$${pedido.total}</span>
                        </div>
                        
                        <div class="mt-4">
                            <h5>Resumen</h5>
                            <p><strong>Productos:</strong> ${pedido.cantidadProductos}</p>
                            <p><strong>ID Usuario:</strong> ${pedido.idUsuario}</p>
                        </div>
                    `;
                    
                    // Mostrar el panel
                    document.getElementById('detailsPanel').classList.add('open');
                    document.getElementById('detailsOverlay').classList.add('active');
                } else {
                    alert('Error: ' + data.message);
                }
            },
            error: function(xhr, status, error) {
                console.error('Error al cargar detalles:', error);
                alert('No se pudieron cargar los detalles del pedido');
            }
        });
    } catch (error) {
        console.error('Error inesperado:', error);
        alert('Ocurrió un error inesperado');
    }
}

// Función auxiliar para obtener color según estado
function getEstadoBadgeColor(estado) {
    const colores = {
        'nuevo': 'primary',
        'pendiente': 'warning',
        'completado': 'success',
        'cancelado': 'danger',
        'No pagado': 'danger'
    };
    return colores[estado] || 'secondary';
}

// Función auxiliar para obtener nombre de imagen
function getImageName(imagenesString) {
    try {
        // Si es un array en formato string, lo parseamos
        const imagenes = JSON.parse(imagenesString);
        return imagenes[0] ? imagenes[0] + '.jpg' : 'default.jpg';
    } catch (e) {
        // Si no se puede parsear, usamos el valor directamente
        return imagenesString && imagenesString !== '[]' ? 
               imagenesString.replace(/[\[\]"]/g, '') + '.jpg' : 'default.jpg';
    }
}




// Función para cerrar el panel de detalles
function closeDetails() {
    document.getElementById('detailsPanel').classList.remove('open');
    document.getElementById('detailsOverlay').classList.remove('active');
}

// Cerrar al hacer clic fuera del panel
document.getElementById('detailsOverlay').addEventListener('click', closeDetails);
</script>


